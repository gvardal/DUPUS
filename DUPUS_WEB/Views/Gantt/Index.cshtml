<script>

    function toolbarClick(args) {
        if (args.item.id === 'showhidebar') {
            var ganttObj = document.getElementById("ShowHideOverAllocation").ej2_instances[0];
            ganttObj.showOverAllocation = ganttObj.showOverAllocation ? false : true;
        }
    }
</script>


